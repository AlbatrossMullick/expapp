<label>Title</label>

<input type="text" name="title" value= "<%=book.title %>" placeholder="Book Title">

<label>Author</label>

<select name="author">
    <% authors.forEach(author => { %>
        <% if(author.id === book.author) {%> 
            <option selected label="<%= author.name  %> " value="<%= author.id  %>"></option>
            <% } else { %>
            <option label="<%= author.name  %> " value="<%= author.id  %>"></option>     
            <% } %> 
    <% }) %> 
</select>

<label>Publish Date</label>

<input type="date" name="publishDate" 
value= "<%=book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" placeholder="DD/MM/YYYY">

<label>Page Count</label>

<input type="number" name="pageCount" min="1" value= "<%=book.pageCount %>" placeholder="Total Page">

<label>Cover</label>

<input type="file" name="cover">

<label>Description</label>

<textarea type="text" name="description" placeholder="Description of the book"><%= book.description  %></textarea>
    